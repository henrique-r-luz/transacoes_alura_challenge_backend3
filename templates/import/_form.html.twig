{{
  form_start(
    form,
    {
      action: '/'
    }
  )
}}
<div class="card">
  <div class="card-header">
    Upload Arquivo de transações
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col">
        {{ form_widget(form.arquivo) }}
      </div>
    </div>
  </div>
  <div class="card-footer">
    {{ form_widget(form.upload) }}
    <a class="btn btn-secondary" href="/">Limpar</a>
  </div>
</div>
{{ form_end(form) }}
