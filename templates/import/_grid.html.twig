<div class="card" style="margin-top:10px;">
  <div class="card-header">
    Lista de Importações
  </div>
  <div class="card-body">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">
            {{ knp_pagination_sortable(services, 'Id', 'id') }}
          </th>
          <th scope="col">
            {{ knp_pagination_sortable(services, 'Data transação', 'data') }}
          </th>
          <th scope="col">
            {{
              knp_pagination_sortable(services, 'Data Importação', 'dataImport')
            }}
          </th>
          <th scope="col">
          {{
            knp_pagination_sortable(services, 'Usuário', 'usuario.nome')
          }}
        </th>
          <th scope="col">
            Açõa
          </th>
        </tr>
      </thead>
      <tbody>
        {# table body #}
        {% for importe in services %}
          <tr>
            <td>
              {{ importe.id }}
            </td>
            <td>
              {{ importe.dataPrimeiraTransacao }}
            </td>
            <td>
              {{ importe.data }}
            </td>
            <td>
              {{ importe.usuario.nome }}
            </td>
            <td><a class="btn btn-info" href={{ path('import_detalhes', { 'id': importe.id }) }}>
              Detalhar
            </a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>

    <div class="row">
      <div class="col">
        <div class="pagination mt-3 d-flex justify-content-center">
          {{
            knp_pagination_render(
              services,
              '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig'
            )
          }}
        </div>
      </div>
    </div>
  </div>
</div>
