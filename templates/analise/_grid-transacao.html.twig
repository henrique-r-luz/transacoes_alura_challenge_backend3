<div class="card" style="margin-top:10px;">
  <div class="card-header">
    Transac√µes Suspeitas
  </div>
  <div class="card-body">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">
            {{ knp_pagination_sortable(analiseTransacoes, 'Id', 'id') }}
          </th>
          <th scope="col">
            {{ knp_pagination_sortable(analiseTransacoes, 'Valor', 'valor') }}
          </th>
        </tr>
      </thead>
      <tbody>
        {# table body #}
        {% for transacao in analiseTransacoes %}
          <tr>
            <td>
              {{ transacao.id }}
            </td>
            <td>
              {{ transacao.valor }}
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>

    <div class="row">
      <div class="col">
        <div class="pagination mt-3 d-flex justify-content-center">
          {{
            knp_pagination_render(
              analiseTransacoes,
              '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig'
            )
          }}
        </div>
      </div>
    </div>
  </div>
</div>
